<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white"
              tools:context=".CadastrarExercicioActivity">

    <EditText
            android:id="@+id/txtNomeExercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome do Exercício"
            android:layout_margin="10dp"
            android:maxLength="45"

    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Nível do Exercício: "
                android:textColor="@android:color/black"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinNivelExercicio"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Parte Corporal: "
                android:textColor="@android:color/black"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinParteCorpo"/>
    </LinearLayout>

    <Button
            android:onClick="registerExercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Exercício"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"/>


</LinearLayout>