<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity"
        android:background="@android:color/white">


    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarAlunos" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/frameLayout"
            android:visibility="gone"
            android:indeterminate="true"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"


            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>

    <LinearLayout android:orientation="vertical" android:layout_marginTop="200dp" android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <Button
                android:onClick="exibirTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Treino DiÃ¡rio"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        <TextView android:id="@+id/treinoDiario" android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>